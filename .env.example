# Polymarket Analyzer - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# Azure Resources
# ============================================================================

# Function App
FUNCTION_APP_NAME=polymarket-analyzer
RESOURCE_GROUP=AZAI_group
LOCATION=swedencentral

# Static Web App
STATIC_APP_NAME=polymarket-web-ui

# ============================================================================
# Database Configuration
# ============================================================================

DB_HOST=postgres-seekapatraining-prod.postgres.database.azure.com
DB_PORT=6432
DB_NAME=polymarket_analyzer
DB_USER=seekapaadmin
DB_PASSWORD=your_secure_password_here
DB_SSLMODE=require

# Connection string (constructed from above)
# DB_CONNECTION_STRING=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}?sslmode=${DB_SSLMODE}

# ============================================================================
# API Keys
# ============================================================================

# Polymarket API
POLYMARKET_API_KEY=your_polymarket_api_key_here

# OpenAI (for AI analysis)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Google Gemini (alternative AI provider)
GEMINI_API_KEY=your_gemini_api_key_here

# Azure OpenAI (if using Azure-hosted OpenAI)
AZURE_OPENAI_ENDPOINT=https://brn-azai.openai.azure.com/
AZURE_OPENAI_KEY=your_azure_openai_key_here
AZURE_OPENAI_DEPLOYMENT=gpt-5

# ============================================================================
# Application Configuration
# ============================================================================

# Environment
NODE_ENV=production
PYTHON_ENV=production

# API Configuration
API_VERSION=v1
API_RATE_LIMIT=100
API_TIMEOUT=30000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# ============================================================================
# Security
# ============================================================================

# JWT Secret (for authentication)
JWT_SECRET=your_jwt_secret_here_use_long_random_string
JWT_EXPIRY=3600

# CORS Configuration
CORS_ORIGIN=https://polymarket-web-ui.azurewebsites.net
CORS_METHODS=GET,POST,PUT,DELETE
CORS_CREDENTIALS=true

# ============================================================================
# Feature Flags
# ============================================================================

ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true
ENABLE_ANALYTICS=true
ENABLE_WEBHOOKS=false

# ============================================================================
# External Services
# ============================================================================

# Application Insights
APPINSIGHTS_INSTRUMENTATIONKEY=your_app_insights_key_here

# Redis (for caching)
REDIS_HOST=your_redis_host
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# Webhook URLs
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/HERE
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK

# ============================================================================
# Deployment
# ============================================================================

# Git
GIT_BRANCH=feature/polymarket-web-app
GIT_COMMIT_SHA=

# Build
BUILD_NUMBER=
BUILD_TIMESTAMP=

# ============================================================================
# Development / Testing
# ============================================================================

# Test Database (for local development)
TEST_DB_HOST=localhost
TEST_DB_PORT=5432
TEST_DB_NAME=polymarket_test
TEST_DB_USER=postgres
TEST_DB_PASSWORD=postgres

# Mock API (for testing without real API calls)
USE_MOCK_API=false
MOCK_DATA_DIR=./mock-data

# Debug Mode
DEBUG=false
VERBOSE_LOGGING=false

# ============================================================================
# Notes
# ============================================================================

# 1. Never commit this file with real values to git
# 2. Use Azure Key Vault for production secrets
# 3. Rotate API keys and passwords regularly
# 4. Use managed identities instead of passwords where possible
# 5. Keep different .env files for dev, staging, and production

# ============================================================================
# Quick Setup Commands
# ============================================================================

# Load environment:
#   source .env
#
# Set in Function App:
#   az functionapp config appsettings set \
#     --name $FUNCTION_APP_NAME \
#     --resource-group $RESOURCE_GROUP \
#     --settings @.env
#
# Verify settings:
#   az functionapp config appsettings list \
#     --name $FUNCTION_APP_NAME \
#     --resource-group $RESOURCE_GROUP
